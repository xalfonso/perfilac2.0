<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Inicio {% endblock %}</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/perfilac/css/bootstrap.min.css') }}"  type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('bundles/perfilac/css/jquery-ui-1.10.4.custom.min.css') }}"  type="text/css" media="all">
            <link rel="stylesheet" href="{{ asset('bundles/perfilac/css/webdesign.css') }}"  type="text/css" media="all">
        {% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/perfilac/script/jquery-2.0.0.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/perfilac/script/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/perfilac/script/jquery-ui-1.10.4.custom.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/perfilac/script/jscript.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div class="wrapper">
            <div class="footer">
                <div class="header">

                    {% block manu %}
                        <!-- Menu de Boostrap -->
                        <div class="navbar navbar-inverse navbar-fixed-top">
                            <div class="container">

                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                    <a class="navbar-brand" href="{{ path('perfilac_homepage') }}">Inicio</a>
                                </div>
                                <div class="navbar-collapse collapse">
                                  <!--  {% if is_granted('IS_AUTHENTICATED_FULLY') %} -->
                                        <ul class="nav navbar-nav">
                                            <!--<li class="">
                                                 <a href="admin_page.php">Servicios</a>
                                             </li>-->
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Vendedor <b class="caret"></b> </a>
                                                <ul class="dropdown-menu" id="asa1">
                                                    {% if is_granted('ROLE_ADMINISTRADOR') %}   <li><a href="{{ path('vendedorIncluir', {'accion':'ini'}) }}" >Incluir Vendedor</a></li> {% endif %}
                                                    <li><a href="{{ path('vendedorListar') }}" >listar Vendedor</a></li>  
                                                    {% if is_granted('ROLE_ADMINISTRADOR') %}<li><a href="{{ path('comercialIncluir', {'accion':'ini'}) }}" >Incluir Comercial</a></li>{% endif %}
                                                    <li><a href="{{ path('comercialListar') }}" >listar Comercial</a></li>
                                                </ul>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administraci&oacute;n <b class="caret"></b> </a>
                                                <ul class="dropdown-menu" id="asa">
                                                    <li><a href="{{ path('tipoMonedaIncluir', {'accion':'ini'}) }}" >Incluir Tipo Moneda</a></li>
                                                    <li><a href="{{ path('tipoMonedaListar') }}" >Listar Tipos de Moneda</a></li>
                                                    <li><a href="{{ path('tipoProductoIncluir', {'accion':'ini'}) }}" >Incluir Tipo de Producto</a></li>
                                                    <li><a href="{{ path('tipoProductoListar') }}" >Listar Tipos de Producto</a></li>      
                                                    <li><a href="{{ path('tipoEnchapeIncluir', {'accion':'ini'}) }}" >Incluir Tipo de Enchape</a></li>
                                                    <li><a href="{{ path('tipoEnchapeListar') }}" >Listar Tipos de Enchape</a></li>
                                                    <li><a href="{{ path('tipoVentaIncluir', {'accion':'ini'}) }}" >Incluir Tipo de Venta</a></li>
                                                    <li><a href="{{ path('tipoVentaListar') }}" >Listar Tipos de Venta</a></li>
                                                    <li><a href="{{ path('suministradorIncluir', {'accion':'ini'}) }}" >Incluir Suministrador</a></li>
                                                    <li><a href="{{ path('suministradorListar') }}" >Listar Suministradores</a></li>                                            
                                                </ul>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Direcci&oacute;n <b class="caret"></b> </a>
                                                <ul class="dropdown-menu" id="asa1">
                                                    <li><a href="{{ path('provinciaIncluir', {'accion':'ini'}) }}" >Incluir Provincia</a></li>
                                                    <li><a href="{{ path('provinciaListar') }}" >Listar Provincias</a></li>
                                                    <li><a href="{{ path('municipioIncluir', {'accion':'ini'}) }}" >Incluir Municipio</a></li>
                                                    <li><a href="{{ path('municipioListar') }}" >Listar Municipios</a></li>                                                           
                                                </ul>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Cliente <b class="caret"></b> </a>
                                                <ul class="dropdown-menu" id="asa2">
                                                    <li><a href="{{ path('clienteIncluir', {'accion':'ini'}) }}" >Incluir Cliente</a></li>
                                                    <li><a href="{{ path('clienteListar') }}" >Listar Clientes</a></li>          
                                                    <li><a href="{{ path('representanteIncluir', {'accion':'ini'}) }}" >Incluir Representante</a></li>
                                                    <li><a href="{{ path('representanteListar') }}" >Listar Representante</a></li>
                                                </ul>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Producto <b class="caret"></b> </a>
                                                <ul class="dropdown-menu" id="asa3">
                                                    <li><a href="{{ path('productoIncluir', {'accion':'ini'}) }}" >Incluir Producto</a></li>
                                                    <li><a href="{{ path('productoListar') }}" >Listar Producto</a></li>                                                      
                                                </ul>
                                            </li>
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Venta <b class="caret"></b> </a>
                                                <ul class="dropdown-menu" id="asa3">
                                                    <li><a href="{{ path('ventaIncluir', {'accion':'ini'}) }}" >Incluir Venta</a></li>
                                                    <li><a href="{{ path('ventaListar') }}" >Listar Venta</a></li>                                                      
                                                </ul>
                                            </li>
                                        </ul>
                                  <!--   {% endif %}   -->  
                                    <ul class="nav navbar-nav navbar-right">                                       
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                            <li>
                                                <form action="{{ path('logout') }}" id="logout-form" method="POST">
                                                    <label id="idLabelNombreUsuario"> Bienvenido: {{ app.user.username }} ({{ app.user.roles[0] }})</label><a href="#" onClick="document.getElementById('logout-form').submit()" >Cerrar</a><span class="glyphicon glyphicon-log-out"> </span>
                                                </form>
                                            </li>
                                        {%else %} 
                                            <form action="{{ path('autenticar') }}" id="login-form" method="POST">
                                                <fieldset>
                                                    <span class="text">
                                                        <input type="text" value="Username" id="id_username" name="_username" onFocus="if (this.value == 'Username') {
                                                                    this.value = ''
                                                                }" onBlur="if (this.value == '') {
                                                                            this.value = 'Username'
                                                                        }">
                                                    </span>
                                                    <span class="text">
                                                        <input type="password" value="Password" id="id_password" name="_password" onFocus="if (this.value == 'Password') {
                                                                    this.value = ''
                                                                }" onBlur="if (this.value == '') {
                                                                            this.value = 'Password'
                                                                        }">
                                                    </span>
                                                    <a href="#" class="login" onClick="document.getElementById('login-form').submit()"><span><span>Login</span></span></a>
                                                    <!-- Este campo oculto es para almacenar la url donde quiero que vaya el usuario cuando se autentique correctamente -->
                                                    <input type="hidden" name="_target_path" value="/inicio" />

                                                </fieldset>
                                            </form>
                                        {% endif %}
                                    </ul>
                                </div>
                                <!--/.nav-collapse -->

                            </div>
                        </div>



                        <!-- End Menu de Boostrap -->
                    {% endblock %}

                    <div class="content">
                        <div id="left">                            
                            <h1>{% block msg %} {{ msg }}{% endblock %}</h1>
                            {% block body %} 
                                <span style="font-size: 24px; text-align: center ">Sistema de Gestión de Ventas Perfilac (SGVP). </span><br />
                                <br />
                                <br />
                                <br />
                                <br />
                            {% endblock %} 
                        </div>
                        <br clear="all" />
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>