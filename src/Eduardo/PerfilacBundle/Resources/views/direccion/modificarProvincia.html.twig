{% extends 'PerfilacBundle::index.html.twig' %}
{% block title %}Modificar Provincia{% endblock %}
{% block body %}
    <form id="formModificarProvincia" method="post" action="{{ path('provinciaActualizar', {'id':provincia.id}) }}" class="ganar_form_basico">
        <fieldset>
            <legend>Modificar Provincia</legend>
            <div class="ganar_form_par">
                <label for="inp_nombre"> Nombre </label> <br />
                <input type="text" size="70" name="inp_nombre" id="inp_nombre" maxlength="200" alt="input para el nombre" required="required" tabindex="1" title="Debe insertar el nombre" placeholder="nombre" accesskey="n" value="{{ provincia.nombre }}"/> <br />
            </div>
            <div class="ganar_form_boton">
                <input type="submit" name="enviar" value="Enviar" accesskey="e" />
                <input type="reset" name="limpiar" value="Restaurar" accesskey="l" />
            </div>
        </fieldset>

    </form>
{% endblock %}    
