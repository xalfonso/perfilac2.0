{% extends 'PerfilacBundle::index.html.twig' %}
{% block title %}Modificar Municipio{% endblock %}
{% block body %}

    <form id="formModificarMunicipio" method="post" action="{{ path('municipioActualizar', {'id':municipio.id}) }}" class="ganar_form_basico">
        <fieldset>
            <legend>Modificar Municipio</legend>
            <div class="ganar_form_par">
                <label for="id_provincias"> Provincias </label> <br />
                <select id="id_provincias" name="name_provincias" required="required">
                    {% for provincia in provincias %}
                        {% if  provincia.id == municipio.provincia.id %}
                            <option value="{{ provincia.id }}" selected="selected"> {{ provincia.nombre }} </option>
                        {%else %}
                            <option value="{{ provincia.id }}"> {{ provincia.nombre }} </option>
                        {%endif %}
                    {% endfor %}
                </select>
            </div>
            <div class="ganar_form_par">
                <label for="inp_nombre"> Nombre </label> <br />
                <input type="text" size="70" name="inp_nombre" id="inp_nombre" maxlength="200" alt="input para el nombre" required="required" tabindex="1" title="Debe insertar el nombre" placeholder="nombre" accesskey="n" value="{{ municipio.nombre }}"/> <br />
            </div>
            <div class="ganar_form_boton">
                <input type="submit" name="enviar" value="Enviar" accesskey="e" />
                <input type="reset" name="limpiar" value="Restaurar" accesskey="l" />
            </div>
        </fieldset>

    </form>
{% endblock %}
