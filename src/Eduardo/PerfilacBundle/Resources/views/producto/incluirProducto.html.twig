{% extends 'PerfilacBundle::index.html.twig' %}
{% block title %}Insertar Producto{% endblock %}
{% block body %}

    <!-- Nav tabs -->
    <ul id="mytab" class="nav nav-tabs">
        <li class="active"><a href="#DatosGenerales" data-toggle="tab">Datos Generales</a></li>        
        <li><a href="#DatosAdicionales" data-toggle="tab">Datos Adicionales</a></li>       
    </ul>

    <form id="formInsertarProducto" method="post" action="ej" class="ganar_form_basico">       
        <div class="tab-content">
            <div class="tab-pane active" id="DatosGenerales">
                <fieldset id="fiel_datosGenerales">    
                    <div class="ganar_form_par">
                        <label for="inp_codigo">C&oacute;digo </label>
                        <input type="text" name="name_codigo" id="inp_codigo" maxlength="200" alt="input para el codigo" required="required" tabindex="1" title="Debe insertar el codigo" placeholder="codigo" accesskey="c"/>
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_nficha">No. Ficha </label>
                        <input type="text" name="name_nficha" id="inp_nficha" maxlength="200" alt="input para el no. ficha" required="required"  tabindex="2" title="Debe insertar el no. ficha" placeholder="no. ficha" accesskey="f"/>
                    </div>    
                    <div class="ganar_form_par">
                        <label for="inp_cup">Precio CUP </label>
                        <input type="text" name="name_cup" id="inp_cup" maxlength="200" alt="input para el precio CUP" required="required" tabindex="3" title="Debe insertar el precio CUP" placeholder="precio CUP" accesskey="p"/>
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_cuc">Precio CUC </label>
                        <input type="text" name="name_cuc" id="inp_cuc" maxlength="200" alt="input para el precio CUC"  tabindex="4" required="required" title="Debe insertar el precio CUC" placeholder="precio CUC" accesskey="u"/>
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_color">Color </label>
                        <input type="text" name="name_color" id="inp_color"  maxlength="200" alt="input para el color" required="required" tabindex="5" title="Debe insertar el color" placeholder="color" accesskey="o"/>                        
                    </div>                    
                    <div class="ganar_form_par">
                        <label for="text_des"> Descripci&oacute;n </label>
                        <textarea name="name_des" id="text_des" tabindex="6" alt="input para la descripci&oacute;n" title="Debe insertar una descripci&oacute;n" placeholder="descripci&oacute;n" accesskey="d" required="required"></textarea>
                    </div>

                </fieldset> 
            </div>

            <div class="tab-pane" id="DatosAdicionales">
                <fieldset id="fiel_datosAdicionales"> 
                    <div class="ganar_form_par">
                        <label for="id_tipos">Tipo</label>
                        <select id="id_tipos" name="name_tipos" required="required" tabindex="6">
                            {% for tipo in tipos %}
                                <option value="{{ tipo.id }}"> {{ tipo.nombre }} </option>
                            {% endfor %}
                        </select>
                    </div>  
                    <div class="ganar_form_par">
                        <label for="id_tiposen">T. Enchape</label>
                        <select id="id_tiposen" name="name_tiposen" required="required" tabindex="7">
                            {% for tipoe in tipose %}
                                <option value="{{ tipoe.id }}"> {{ tipoe.nombre }} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="ganar_form_par">
                        <label for="id_suministrador">Suministrador</label>
                        <select id="id_suministrador" name="name_suministrador" required="required" tabindex="8">
                            {% for suministrador in suministradores %}
                                <option value="{{ suministrador.id }}"> {{ suministrador.nombre }} </option>
                            {% endfor %}
                        </select>
                    </div>
                </fieldset>
            </div>
            <div class="ganar_form_boton">
                <input type="submit" name="enviar" value="Enviar" accesskey="e" tabindex="9"/>
                <input type="reset" name="limpiar" value="Restaurar" accesskey="l" tabindex="10"/>
            </div>
        </div>
    </form>

{% endblock %}
