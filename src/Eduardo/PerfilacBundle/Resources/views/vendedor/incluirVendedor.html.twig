{% extends 'PerfilacBundle::index.html.twig' %}
{% block title %}Insertar Vendedor{% endblock %}
{% block body %}

    <!-- Nav tabs -->
    <ul id="mytab" class="nav nav-tabs">
        <li class="active"><a href="#DatosGenerales" data-toggle="tab">Datos Generales</a></li>        
        <li><a href="#Direccion" data-toggle="tab">Direcci&oacute;n Empresa</a></li>   
        <li><a href="#Banco" data-toggle="tab">Banco</a></li>  
    </ul>


    <form id="formInsertarVendedor" method="post" action="ej" class="ganar_form_basico">
        <div class="tab-content">
            <div class="tab-pane active" id="DatosGenerales">
                <fieldset id="fiel_datosGenerales">                    
                    <div class="ganar_form_par">
                        <label for="inp_grupoEmpresarial"> G. Empre. </label>
                        <input type="text" name="name_grupoEmpresarial" id="inp_grupoEmpresarial" maxlength="200" alt="input para el grupo empresarial" required="required" tabindex="1" title="Debe insertar el grupo empresarial" placeholder="grupo empresarial" accesskey="g"/>
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_empresa"> Empresa </label>
                        <input type="text" name="name_empresa" id="inp_empresa" maxlength="200" alt="input para la empresa" required="required" tabindex="2" title="Debe insertar la empresa" placeholder="empresa" accesskey="e"/>
                    </div>                    
                    <div class="ganar_form_par">
                        <label for="inp_taller"> Taller </label>
                        <input type="text" name="name_taller" id="inp_taller" maxlength="200" alt="input para el taller" required="required" tabindex="3" title="Debe insertar el taller" placeholder="taller" accesskey="t"/>
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_nit"> NIT </label>
                        <input type="text" name="name_nit" id="inp_nit" maxlength="200" alt="input para el nit" required="required" tabindex="4" title="Debe insertar el nit" placeholder="nit" accesskey="n"/>
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_codigo"> C&oacute;digo </label>
                        <input type="text" name="name_codigo" id="inp_codigo" maxlength="200" alt="input para el codigo" required="required" tabindex="5" title="Debe insertar el codigo" placeholder="codigo" accesskey="c"/>
                    </div> 
                    <div class="ganar_form_par">
                        <label for="text_comentarioFactura"> Coment. Factura </label>
                        <textarea name="name_comentarioFactura" id="text_comentarioFactura" tabindex="6 alt="input para el comentario de la factura" title="Debe insertar el comentario de la factura" placeholder="comentario factura" accesskey="f" required="required"></textarea>
                    </div>
                </fieldset>
            </div>        
            <div class="tab-pane" id="Direccion">
                <fieldset id="fiel_direccion">

                    <div class="ganar_form_par">
                        <label for="id_provincias"> Provincia </label>
                        <select id="id_provincias" name="name_provincias" tabindex="7" required="required">
                            {% for provincia in provincias %}
                                <option value="{{ provincia.id }}"> {{ provincia.nombre }} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="ganar_form_par">
                        <label for="id_municipios"> Municipios </label>
                        <select id="id_municipios" name="name_municipios" tabindex="8" required="required">
                        </select>
                    </div>
                    <div class="ganar_form_par">
                        <label for="text_dir"> Ubicaci&oacute;n </label>
                        <textarea name="name_text_dir" id="text_dir" tabindex="9" alt="input para la ubicaci&oacute;n" title="Debe insertar una ubicaci&oacute;n" placeholder="ubicaci&oacute;n" accesskey="u" required="required"></textarea>
                    </div>
                </fieldset>
            </div>
            <div class="tab-pane" id="Banco">
                <fieldset id="fiel_banco">

                    <div class="ganar_form_par">
                        <label for="inp_cuentaCUC"> Cuenta CUC</label>
                        <input type="text" name="name_cuentaCUC" id="inp_cuentaCUC" maxlength="200" alt="input la cuenta CUC" required="required" tabindex="10" title="Debe insertar la cuenta CUC" placeholder="cuenta CUC" accesskey="u"/> 
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_nombreCuentaCUC"> Nom. Cu. CUC</label>
                        <input type="text" name="name_nombreCuentaCUC" id="inp_nombreCuentaCUC" maxlength="200" alt="input el nombre de la cuenta CUC" required="required" tabindex="11" title="Debe insertar el nombre de la cuenta CUC" placeholder="nombre cuenta CUC" accesskey="n"/> 
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_cuentaCUP"> Cuenta CUP</label>
                        <input type="text" name="name_cuentaCUP" id="inp_cuentaCUP" maxlength="200" alt="input para la cuenta CUP" required="required" tabindex="12" title="Debe insertar la cuenta CUP" placeholder="cuenta CUP" accesskey="p"/> 
                    </div>
                    <div class="ganar_form_par">
                        <label for="inp_nombreCuentaCUP"> Nom. Cu. CUP</label>
                        <input type="text" name="name_nombreCuentaCUP" id="inp_nombreCuentaCUP" maxlength="200" alt="input el nombre de la cuenta CUP" required="required" tabindex="13" title="Debe insertar el nombre de la cuenta CUP" placeholder="nombre cuenta CUP" accesskey="a"/> 
                    </div> 
                    <div class="ganar_form_par">
                        <label for="inp_sucursal"> Sucursal</label>
                        <input type="text" name="name_sucursal" id="inp_sucursal" maxlength="200" alt="input el nombre la sucursal" required="required" tabindex="14" title="Debe insertar la sucursal" placeholder="sucursal" accesskey="s"/> 
                    </div>
                </fieldset>
            </div>

            <div class="ganar_form_boton">
                <input type="submit" name="enviar" value="Enviar" accesskey="e" tabindex="15"/>
                <input type="reset" name="limpiar" value="Restaurar" accesskey="l" tabindex="16"/>
            </div>
        </div>
    </form>

{% endblock %}
